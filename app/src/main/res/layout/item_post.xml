<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/container_itemblog"
        android:paddingBottom="16dp"
        android:background="@drawable/card_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/posttitle_itemblog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="Las Aguilas son las aguilas"
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/postdescription_itemblog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/content_text_color"
            android:lineSpacingExtra="8dp"
            android:layout_marginRight="16dp"
            android:layout_alignStart="@+id/posttitle_itemblog"
            android:layout_alignLeft="@+id/posttitle_itemblog"
            android:layout_below="@+id/posttitle_itemblog"
            android:layout_marginTop="8dp"
            android:text="Este es un texto de muestra para la app blog del curso de programacion movil android. Loremipsum dolor et que se yo ke sigue. Loremipsum dolor et que se yo ke sigue. Loremipsum dolor blablabla" />

        <TextView
            android:id="@+id/postusername_itemblog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postdescription_itemblog"
            android:layout_toRightOf="@+id/img_user"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:text="Francisco Tejada"
            android:textColor="@color/content_text_color"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/postdate_itemblog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postusername_itemblog"
            android:layout_toRightOf="@+id/img_user"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:text="24/10/2019"
            android:textColor="@color/content_text_color"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/postdescription_itemblog"
            app:srcCompat="@drawable/user" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>